import tkinter as tk

root = tk.Tk()

# Créer le widget Canvas avec une taille de 400 x 400 pixels
canvas = tk.Canvas(root, width=400, height=400)
canvas.pack()

# Créer un widget Frame à ajouter au widget Canvas
frame = tk.Frame(canvas)

# Ajouter des widgets au widget Frame
label = tk.Label(frame, text='Hello world!')
label.grid(row=0, column=0)

# Ajouter le widget Frame au widget Canvas avec une marge de 50 pixels en haut
canvas.create_window((0, 50), window=frame, anchor='nw')

root.mainloop()